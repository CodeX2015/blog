<h1>New Article</h1>
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :Автор %><br>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :Название %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Статья %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<td><%= link_to 'Back', articles_path %></td>